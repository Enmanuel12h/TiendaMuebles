
@model IEnumerable<Pedidos>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista de Pedidos</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-action="Create" asp-controller="Consola"><i class="fa-solid fa-plus"></i> Agregar Nueva Consola</a>

        </div>
    </div>
    <br />

    @if(Model.Count() > 0)
    {
        <table class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>id_pedido</th>
                    <th>id_cliente</th>
                    <th>fecha_pedido</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var objDetallesPedidos in Model)
                {
                    <tr>
                        <td width="50%">@objPedidos.id_pedido</td>
                        <td width="50%">@objPedidos.id_cliente</td>
                        <td width="50%">@objPedidos.fecha_pedido</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a class="btn btn-warning mx-2" asp-action="Edit" asp-route-id="@objConsola.idConsola"><i class="fa-solid fa-pen-to-square"></i></a>
                                <a class="btn btn-danger mx-2" asp-action="Delete" asp-route-id="@objConsola.idConsola"><i class="fa-solid fa-trash"></i></a>
                            </div>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    }
    else
    {
        <p>Ninguna Pedidos</p>
    }
</div>

@section Scripts{
    @if (TempData["EditPedidos"] != null)
    {
        <script>
            Toastify({
                text: "Se edito la Pedidos",
                duration: 3000,
                
                newWindow: true,
                
                gravity: "top", // `top` or `bottom`
                position: "right", // `left`, `center` or `right`
                stopOnFocus: true, // Prevents dismissing of toast on hover
                style: {
                    background: "linear-gradient(to right, #00b09b, #96c93d)",
                },
            }).showToast();

        </script>
    }
}
