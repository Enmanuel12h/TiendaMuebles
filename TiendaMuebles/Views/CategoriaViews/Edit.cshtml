@model Categoria;

<form method="post" asp-action="Edit">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Editar Categoria</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <input asp-for="id_categoria" hidden/>
                    <div class="col-4">
                        <label asp-for="nombre">Nombre</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="nombre" class="form-control" />
                        <span asp-validation-for="nombre" class="text-danger"></span>
                    </div>
                </div><br />
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="id_categoria">id_categoria</label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="descripcion" class="form-control"></textarea>
                        <span asp-validation-for="descripcion" class="text-danger"></span>
                    </div>
                </div><br />
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <button type="submit" class="btn btn-info w-100"><i class="fa-solid fa-check"></i></button>
                        </div>
                        <div class="col">
                            <a class="btn btn-danger w-100" asp-action="Index"><i class="fa-solid fa-xmark"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts {
    <script>
        $(document).ready(function () {
            $('.summernote').summernote({
                height: 250,
                lang: 'es-Es'
            });
        });
    </script>
}


